// Cria um servidor WebSocket
const server = new WebSocket('ws://localhost:3000');

// Evento disparado quando a conexão é aberta
server.onopen = () => {
  console.log('Conexão estabelecida com o servidor WebSocket');
};

// Evento disparado quando uma mensagem é recebida do servidor
server.onmessage = event => {
  console.log('Mensagem recebida do servidor:', event.data);
};

// Evento disparado quando ocorre um erro na conexão
server.onerror = error => {
  console.error('Erro na conexão WebSocket:', error);
};

// Evento disparado quando a conexão é fechada
server.onclose = () => {
  console.log('Conexão WebSocket fechada');
};

// Exemplo de envio de mensagem para o servidor
server.send('Olá, servidor! Esta é uma mensagem do cliente.');
